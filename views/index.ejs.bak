  <body>

    <header>
        <span><img id="header-logo" src="images/logo.png" alt=""></span>
        <span id="report-button" class="pull-right"><a href="#myModal" role="button" class="btn" data-toggle="modal" data-target="#myModal">Report</a></span>
    </header>

    <div id="wrapper">
      
      <div class="modal hide" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h3 id="myModalLabel">Submit Report</h3>
        </div>
        
        <div class="modal-body">
            
          <form name="submitRating" id="submitRating" method="POST" action="/">
            <legend>Submit a rating...</legend>
            <label>Badge Number</label>
            <input id='badge' name='badge' type="text" placeholder="Type something…" value="badge">
            <span class="help-block">Example block-level help text here.</span>
            <label>Rating</label>
            <select id='rating' name='rating'>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            </select>
            <label>Comment</label>
            <input id='comment' name='comment' type="text" placeholder="Type something…" value="comment">
            <span class="help-block">Example block-level help text here.</span>
        
            <label class="checkbox">
            <input id='location_on' name='location_on' type="checkbox"> Include location
            </label>
          </form>
        
        </div>
        
        <div class="modal-footer">
          <button class="btn btn-primary" onclick="$('#submitRating').submit();">Submit</button>
        </div>
      
      </div> <!-- end .modal -->

      

      <div id="main-content">

        <div id="pages">

          <div id="reviews-page">

            <table class="table table-hover">
            <thead>
              <tr><td>Badge #</td><td>Rating</td><td>Comments</td></tr>
            </thead>
            <tbody>
              <% for(var i=0; i<ratings.length; i++) {%>
              <tr><td><%= ratings[i].badge %></td><td><%= ratings[i].rating %></td><td><%= ratings[i].comment %></td></tr>
              <% } %>
            </tbody>
            </table>
            
          </div> <!-- end #reviews-page -->
        
          
          <div id="map-page" class="current">
            
            <div id="map"></div>

          </div> <!-- end #map-page -->

        </div>
      </div>
    </div>

    <footer>
      <ul id="tab-bar">
        <li>
          <a href="#reviews-page" class="btn-inverse">Reviews</a>
        </li>
        <li>
          <a href="#map-page" class="btn-inverse active">Map</a>
        </li>
      </ul>
    </footer>

    <script src="javascripts/jquery-1.7.1.min.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/leaflet.js"></script>
